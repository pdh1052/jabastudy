package com.naver;

public class Hero {
	
	Weapons []weapons;
	Weapons w;
	
	public Hero() {
		weapons = new Weapons[] {new Bow(1, "È°"),new Sword(5, "°Ë"),new Gun(10, "ÃÑ")};
		w = weapons [2];
		
	}

	public Hero(Weapons[] weapons, Weapons w) {
		super();
		this.weapons = weapons;
		this.w = w;
	}
	
	
	public void chageWeapon(int weaponsIdx) {
		if (weaponsIdx >= weapons.length || weaponsIdx < 0) {
			weaponsIdx = weapons.length-1;
		}
	}
	
	public void attack(Monster mon) {
		w.attack(mon);
	}

}
